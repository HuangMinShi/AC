<!-- ============ show-content ============ -->
<h1 id="restaurant-show-title">{{restaurant.name}}</h1>

<div class="container">
  <div class="row restaurant-show">
    <div class="col-left col-sm-10 col-md-6 mx-auto px-3" id="restaurant-show-image">
      <img src="{{restaurant.image}}" alt="{{restaurant.name}}" data-toggle="modal"
        data-target="#restaurant-show-image-modal">
    </div>

    <div class="col-right col-sm-10 col-md-6 mx-auto px-3" id="restaurant-show-info">
      <p>
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p>
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.location}}
        <a href="{{restaurant.google_map}}" class="" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p>
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：</span>
        {{restaurant.phone}}
      </p>

      <p>
        {{restaurant.description}}
      </p>
    </div>
  </div>
  <hr>

  <div class="action my-4 text-center">
    <a href="/" class="btn btn btn-primary">返回</a>
    <a href="/restaurants/{{restaurant.id}}/edit" class="btn btn btn-primary">編輯</a>
    <button type="submit" class="btn btn btn-outline-danger" data-toggle="modal"
      data-target="#restaurant-delete-modal">刪除</button>
  </div>
</div>

<!-- ============ show-img-modal ============ -->
<div class="modal fade" id="restaurant-show-image-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <img src="{{restaurant.image}}" alt="{{restaurant.name}}">
      </div>
    </div>
  </div>
</div>

<!-- ============ show-delete-modal ============ -->
<div class="modal fade " id="restaurant-delete-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content p-3">
      <div class="modal-body d-flex align-items-center">
        <h4 class="mr-auto">真的要刪除嗎?</h4>
        <div class="action p-1">
          <button type="button" class="btn btn-primary" data-dismiss="modal">返回</button>
          <form action="/restaurant/{{restaurant.id}}/delete?_method=DELETE" method="POST" class="d-inline">
            <button type=" submit" class="btn btn btn-outline-danger">確定</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>