<div class="row mt-5">
  <div class="col-md-6 mx-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">Register</h1>

      {{> messages}}

      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="name" id="name" name="name" class="form-control" placeholder="請輸入姓名" value="{{name}}">
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="請輸入email" value="{{email}}">
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="請輸入password"
            value="{{password}}">
        </div>

        <div class="form-group">
          <label for="password2">Password</label>
          <input type="password" id="password2" name="password2" class="form-control" placeholder="請再次輸入password"
            value="{{password2}}">
        </div>

        <button type="submit" class="btn btn-primary btn-block">Register</button>
      </form>

      <p class="lead mt-4">Have An Account?
        <a href="/users/login">Login</a>
      </p>
    </div>
  </div>
</div>